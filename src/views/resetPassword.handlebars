<form id="resetForm">
  <div class="col">
    <label class="form-label">New Password:</label>
    <div class="d-flex gap-3"><input type="password" class="form-control" placeholder="Insert a new password"
        name="password" id="inputPassword" required />

      <div class="col my-3 d-flex gap-3">
        <input type="submit" value="Reset Password" />
        <input type="hidden" id="token" value="{{token}}">
      </div>
</form>
</div>
</div>
</div>
